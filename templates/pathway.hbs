<div class='row'>
    <div class='col-md-6'>
        Displaying <strong>{{pathways.length}}</strong> pathways out of <strong>{{pathwaysFound}}</strong>.
    </div>
    <div class='col-md-6'>
        <span style='color:red'><strong>{{identifiersNotFound}}</strong></span> identifiers not found.<br> 
    </div>
</div>

<div class='panel-group' id='accordion' role='tablist' aria-multiselectable='true'>

    {{#each pathways}}
    <div class='panel panel-default'>
        <div class='panel-heading' role='tab' id='heading{{@key}}'>
            <h4 class='panel-title text-capitalize'>
                <a class='collapsed' data-toggle='collapse' data-parent='#accordion' href='#collapse{{stId}}' aria-expanded='false' aria-controls='collapse{{stId}}'>
                    {{name}} <span class='badge pull-right'> {{this.entities.found}} / {{this.entities.total}} </span>
                </a>
            </h4>
        </div>
        <div id='collapse{{stId}}' class='panel-collapse collapse' role='tabpanel' aria-labelledby='heading{{stId}}'>
            <div class='panel-body'>
                
                <div class="row">
                    <div class="col-md-6">
                        <h5>Entities</h5>
                        <p>
                            <strong>Fdr:</strong> {{entities.fdr}}<br>
                            <strong>pValue:</strong> {{entities.pValue}}<br>
                            <strong>Ratio:</strong> {{entities.ratio}}<br>
                            Found <strong>{{entities.found}}</strong> out of <strong>{{entities.total}}</strong><br>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5>Reactions</h5>
                        <p>
                            <strong>Ratio:</strong> {{reactions.ratio}}<br>
                            Found <strong>{{reactions.found}}</strong> out of <strong>{{reactions.total}}</strong><br>
                        </p>
                    </div>
                </div>
                
                <p>
                    <a href='http://www.reactome.org/content/detail/{{stId}}' target='_blank'>
                        <button type='button' class='btn btn-info' aria-label='Left Align'>
                          <span class='glyphicon glyphicon glyphicon-share-alt' aria-hidden='true'></span> See in Reactome
                        </button>
                    </a>
                </p>
            </div>
        </div>
    </div>
    {{/each}}
    
</div>